<!--
form_forはデフォルト仕様で、引数によってどのようなURLで送信するかが決まっている
引数がレコードに存在しない場合、createアクションへ送信
引数がレコードに存在している場合、updateアクションへ送信
-->

<!-- blogs_helper.rbに定義されたヘルパーメソッドを使用する-->
<%= form_for(@blog, url: choose_new_or_edit) do |f| %>

  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
  <% end %>
<%= link_to "ブログ一覧画面にもどる", blogs_path %>