<!--
form_forはデフォルト仕様で、引数によってどのようなURLで送信するかが決まっている
引数がレコードに存在しない場合、createアクションへ送信
引数がレコードに存在している場合、updateアクションへ送信
-->
<!-- blogs_helper.rbに定義されたヘルパーメソッドを使用する-->
<%= form_for(@contact, url: choose_new_or_edit_for_contact) do |f| %>

  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row">
  <strong><%= f.label :名前 %></strong>
  <%= f.text_field :name, class: 'form-control'  %>
  <br>
  <%= f.label :メール %>
  <%= f.text_field :email, class: 'form-control'  %>
  <br>
  <%= f.label :コンテンツ %>
  <%= f.text_field :content, class: 'form-control'  %>
  <br>
  <%= f.submit  '投稿', class: 'btn btn-primary btn-block'%>
  </div>
<% end %>

<%#= link_to "ブログ一覧画面にもどる", contact_path %>