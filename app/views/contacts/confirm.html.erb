<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h3>以下の内容で、送信する。</h3>
<%= form_for(@contact) do |f| %>
  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  
  <!--f.hidden_field => 入力フォームを生成せず、new Viewからきた値をそのまま、createアクションに渡すようにする-->
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>

  <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
  <p>名前:<%= @contact.name %></p>
  <p>メール:<%= @contact.email %></p>
  <p>コンテンツ:<%= @contact.content %></p>
  <%= f.submit "登録する", class: 'btn btn-primary btn-block'  %>
  <%#= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<!-- 前のアクションに戻るためには、link_to メソッドの引数に:backを付ける-->
<!-- しかしlink_toはGETメソッドとなるため、前のページに戻ると情報が初期化されてしまう-->
<%#= link_to '戻る', :back %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%#= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-primary btn-block' %>
<% end %>
  </div>
</div>