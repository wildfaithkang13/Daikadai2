<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h3>以下の内容で、送信する。</h3>

      <%= form_for(@blog) do |f| %>
  <!-- `f.hidden_field`を使用して、リクエストパラメータに値を設定できるようにしています。 -->
  
  <!--f.hidden_field => 入力フォームを生成せず、new Viewからきた値をそのまま、createアクションに渡すようにする-->
  
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>

  <!-- @blog.titleと@blog.contentとすることで、表示用の値を画面に出力しています。 -->
        <p>タイトル:<%= @blog.title %></p>
        <p>本文:<%= @blog.content %></p>
        <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
      <% end %>

<!-- 前のアクションに戻るためには、link_to メソッドの引数に:backを付ける-->
<!-- しかしlink_toはGETメソッドとなるため、前のページに戻ると情報が初期化されてしまう-->
<%#= link_to '戻る', :back %>

    <%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
      <%= f.hidden_field :title %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>